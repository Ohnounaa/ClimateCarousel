<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weatherDataViewModel"
            type="com.ohnouna.climatecarouselapp.WeatherDataViewModel" />
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/gray"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date"
        android:paddingEnd="5dp"
        android:text="@{Integer.toString(weatherDataViewModel.w.dt)}"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/sky_description_icon"

        android:layout_width="match_parent"
        android:foregroundGravity="center"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <TextView
        android:id="@+id/real_feel_temperature"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:text="@{Double.toString(weatherDataViewModel.w.feels_like.day)}"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toRightOf="@id/sky_description_icon"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/avg_day_temp"
        android:layout_width="wrap_content"
        android:text = "@{Double.toString(weatherDataViewModel.w.temp.day)}"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/sky_description_icon"
        app:layout_constraintTop_toBottomOf="@id/real_feel_temperature"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/avg_night_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:text="@{Double.toString(weatherDataViewModel.w.feels_like.day)}"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/real_feel_temperature"
        app:layout_constraintLeft_toRightOf="@id/avg_day_temp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <!--<Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="@string/plus"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/more_button"
        android:background="@drawable/ripple"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal" />-->
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>